(* Basic definitions. *)

(* The unit type. *)
1 ::= - .

1 = 1 : bool.bool.

(* The empty type. *)
0 ::= .

0 = 0 : bool.bool.

?a. absurd ?0 : a.

(* Strict parentheses *)
?a. ?b. ??!(_ a : b) !|> ?a : b.
?a. ?b. ?a <|! ??!(a _ : b) : b.

(* let-binder *)
?a. let ?&a be a.

(* Identity functions. *)
?a. idr ?a: a.
?a. ?a idl : a.

