(* Basic definitions. *)

(* The unit type. *)
unit ::= ~.

unit = unit : bool.bool.

(* The empty type. *)
void ::= .

void = void : bool.bool.

?a. absurd void : a.

(* Strict parentheses *)
?a. ?b. ??!(_ a : b) !|> ?a : b.
?a. ?b. ?a <|! ??!(a _ : b) : b.

(* let-binder *)
?a. let ?&a be a.

(* Identity functions. *)
?a. idr a: a.
?a. a idl : a.

