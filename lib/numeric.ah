(* Common operations *)
(integer = integer) : bool.bool.
(??integer + integer) : integer.
(??integer - integer) : integer.
(- integer) : integer.
(??integer * integer) : integer.
(??integer / integer) : integer.
(??integer mod integer) : integer.

