(* Operations about numbers. *)

(* The type integer, defined as an opaque type. *)
integer.

(* Functions to define integers. *)
i : integer.
(??integer 0) : integer.
(??integer 1) : integer.
(??integer 2) : integer.
(??integer 3) : integer.
(??integer 4) : integer.
(??integer 5) : integer.
