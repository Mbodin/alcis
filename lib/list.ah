(* Operations about lists. *)

[ ?a ] ::=
	| []
	| a :: (list a)
	.

(* Concatenation *)
?a. ??([ a ]) ++ ([ a ]) : [ a ].
_ :: _ ::> _ ++ _.

(* Reverse *)
?a. [ a ] $ t : [ a ].
_ t ::> _ :: _.

(* Fold *)
?a. ?b. b (b _ a : b) ==> $ [ a ] : b.

(* Map *)
?a. ?b. (_ a : b) --> $ [ a ] : [ b ].

(* Comparison *)
?a. ([ a ]) (= (a _ a : bool.bool)) $ [ a ] : bool.bool.

